<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/goods_img"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        />
<TextView
            android:id="@+id/goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_font_color"
            android:text="六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地地黄丸六味地黄丸六味地地黄丸六味地黄丸六味地地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸六味地黄丸"
            android:lines="2"
            android:ellipsize="none"
            android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/goods_baoyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:background="@drawable/goods_icon_baoyou_radius"
            android:textSize="10sp"
            android:text="包邮"/>
        <TextView
            android:id="@+id/goodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:background="@drawable/goods_icon_goodtype_radius"
            android:layout_marginLeft="10dp"
            android:text="保健品"
            android:textSize="10sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/goods_renminbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_alignParentBottom="true"
            android:text="¥"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text="209"/>
        <TextView
            android:id="@+id/goodsId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text=""/>
    </RelativeLayout>


</LinearLayout>
